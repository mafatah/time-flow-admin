{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build/electron",
    "rootDir": ".",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "types": ["node", "electron"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true
  },
  "include": ["electron/main.ts"]
}
