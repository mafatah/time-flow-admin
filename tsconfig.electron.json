{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./build/electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "electron/**/*",
    "src/lib/**/*",
    "src/types/**/*",
    "src/integrations/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "src/lib/idleDetection.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
